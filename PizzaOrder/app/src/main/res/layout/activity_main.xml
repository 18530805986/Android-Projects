<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_marginTop="63dp"
        android:gravity="center_horizontal"
        android:onClick="sum"
        android:text="Summary" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/lblHome"
        android:layout_width="381dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:gravity="center_horizontal"
        android:text="Pizza Order"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/lblSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Choose what pizza you want!"
        android:gravity="center_horizontal"
        android:layout_below="@+id/lblHome"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lblSelect">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/chkCheese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheese Pizza"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Quantity"/>
            <EditText
                android:id="@+id/txtCheeseQ"
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toppings"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Italian Sausage"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pepperoni"/>
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/chkSupreme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supreme Pizza"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Quantity"/>
            <EditText
                android:id="@+id/txtSupremeQ"
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/chkHawaiian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hawaiian Pizza"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Quantity"/>
            <EditText
                android:id="@+id/txtHawaiianQ"
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:onClick="add"
        android:text="Order" />

</RelativeLayout>